<body>
    <h1>Page Notes</h1>
    <div class="signContainer">
        {{!-- login --}}
        <div class="login form-container">
            <form action="">
                <h1>Login</h1>
                <input type="text" name="username" class="username" placeholder="Username">
                <input type="password" name="password" class="password" placeholder="Password">
                <button type="submit" id="signIn-btn">
                    Sign in
                </button>
            </form>
        </div>

        {{!-- register --}}
        <div class="register form-container">
            <form action="">
                <h1>Register</h1>
                <input type="text" name="name" class="name" placeholder="Full name">
                <input type="text" name="email" class="email" placeholder="Email">
                <input type="text" name="username" class="username" placeholder="Username">
                <input type="password" name="password" class="password" placeholder="Password">
                <input type="password" name="confirm-password" class="confirm-password" placeholder="Confirm Password">
                <button type="submit" id="signUp-btn">
                    Sign up
                </button>
            </form>
        </div>

        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Welcome back</h1>
                    <p>Enter your personal details</p>
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Hello, friend</h1>
                    <p>Register with your personal details</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const container = $('.signContainer');
        const registerBtn = $('#register');
        const loginBtn = $('#login');

        registerBtn.click(function () {
            container.addClass("active")
        })

        loginBtn.click(function () {
            container.removeClass("active");
        })
    </script>

</body>

<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .signContainer {
        width: 100%;
        background-color: white;
        border-radius: 30px;
        box-shadow: 0 5px 15px rgb(0, 0, 0, 0.35);
        position: relative;
        overflow: hidden;
        width: 768px;
        max-width: 100%;
        min-height: 480px;
        font-size: 1rem;
        line-height: 20px;
        margin: 20px 0;
        padding: 20px;
        display: flex;
    }

    .signContainer button {
        background-color: lightgreen;
        font-size: 1em;
        padding: 5px 40px;
        border: 1px solid transparent;
        border-radius: 8px;
        text-transform: uppercase;
        margin-top: 10px;
        cursor: pointer;
    }

    .signContainer button.hidden {
        background-color: cadetblue;
    }

    .signContainer button:hover {
        opacity: 0.8;
    }

    .signContainer input {
        background-color: #eee;
        border: none;
        width: 100%;
        outline: none;
        padding: 10px;
        border-radius: 8px;
    }

    .signContainer form {
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 0 40px;
        height: 100%;
        gap: 20px;
    }

    .form-container {
        position: absolute;
        top: 0;
        height: 100%;
        width: 100%;
        transition: all 0.6s ease-in-out;
    }

    .login {
        left: 0;
        width: 50%;
        z-index: 2;
        opacity: 1;
    }

    .signContainer.active .login {
        transform: translateX(100%);
        opacity: 0;
        z-index: 1;
        animation: move 0.6s;
    }

    .register {
        left: 0;
        width: 50%;
        opacity: 0;
        z-index: 1;
    }

    .signContainer.active .register {
        opacity: 1;
        transform: translateX(100%);
        z-index: 2;
        animation: move 0.6s;
    }

    @keyframes move {

        0%,
        49.99% {
            opacity: 0;
            z-index: 1;
        }

        50%,
        100% {
            opacity: 1;
            z-index: 2;
        }
    }

    .toggle-container {
        position: absolute;
        top: 0;
        left: 50%;
        width: 50%;
        height: 100%;
        overflow: hidden;
        transition: all 0.6s ease-in-out;
        z-index: 1000;
    }

    .signContainer.active .toggle-container {
        transform: translateX(-100%);
    }

    .toggle {
        position: relative;
        background-color: bisque;
        left: -100%;
        width: 200%;
        height: 100%;
        transform: translateX(0);
        transition: all 0.6s ease-in-out;
    }

    .toggle button:hover {
        background-color: cadetblue;
        opacity: 0.8;
    }

    .signContainer.active .toggle {
        transform: translate(50%);
    }

    .toggle-panel {
        position: absolute;
        width: 50%;
        height: 100%;
        transform: translateX(0);
        transition: all 0.6s ease-in-out;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 0 30px;
        text-align: center;
        top: 0;
        gap: 20px;
    }

    .toggle-left {
        transform: translateX(-200%);
    }

    .signContainer.active .toggle-left {
        transform: translateX(0);
    }

    .toggle-right {
        right: 0;
        transform: translateX(0);
    }

    .signContainer.active .toggle-right {
        transform: translateX(200%);
    }

    @media (prefers-color-scheme: dark) {
        .signContainer {
            background-color: #AD49E1;
        }

        .signContainer form {
            background-color: #AD49E1;
        }

        .signContainer input {
            background-color: #2E073F;
        }

        .signContainer button {
            background-color: #4B4376;
        }

        .toggle {
            background-color: blueviolet;
        }
    }
</style>