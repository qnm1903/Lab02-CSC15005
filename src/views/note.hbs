<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notes</title>
  <link rel="stylesheet" href="/css/note.css">
</head>
<body>
  <div class="container">
    <div class="sidebar">
      <h2 id="note-list-title">Danh sách ghi chú</h2>
      <ul id="note-list"></ul>
      <form id="uploadForm">
        <label for="input-file"></label>
        <input type="file" id="input-file" accept="application/pdf" name="pdfFile">
        <button id="add-note-btn" type="Submit">+ Thêm ghi chú</button>
      </form>
      <button id="logout-button">Đăng xuất</button>
    </div>
    <div class="content">
      <p id="placeholder">Chọn hoặc tạo ghi chú để xem nội dung</p>
      <div id="note-content"></div>
    </div>
  </div>

  <!-- Modal chia sẻ -->
  <div class="modal" id="share-modal">
    <div class="modal-content">
      <span class="close-btn" id="close-share">&times;</span>
      <h3>Chia sẻ ghi chú</h3>
      <p id="share-note-title"></p>
      <input placeholder="something" type="text" id="share-link" readonly>
      <button id="copy-link-btn">Sao chép liên kết</button>
    </div>
  </div>

  <!-- Modal xác nhận xóa -->
  <div class="modal" id="delete-modal">
    <div class="modal-content">
      <span class="close-btn" id="close-delete">&times;</span>
      <h3>Xác nhận xóa</h3>
      <p id="delete-note-title"></p>
      <button id="confirm-delete-btn">Xóa</button>
    </div>
  </div>

  <script id="notes-data" type="application/json">
    {{{json_stringify NotesByUserID}}}
  </script>
  <script src="/js/note.js"></script>
  <script src="/js/noteAPIModule.js" type="module"></script>
</body>
</html>